<!DOCTYPE html>
<html>
<head>

    <title>ITnews</title>
    <link rel="stylesheet" href="/style_head.css">
    <link rel="stylesheet" href="/style_body.css">

</head>


<body class="vbox viewport">
    <header class="container-head">
        <section class="main">
            <div class="cols top"><h1>ITnews.co.uk</h1></div>
            <div class="cols middle"><h5>The future is happening.</h5></div>

            <ul>
                <li><a href="/">Home</a></li>
                <li class="dropdown">
                    <a class="dropbtn">Categories</a>
                    <div class="dropdown-content">
                        #foreach ($category in $categories)
                        <a href="/categories/$category">$category.getName()</a>
                            #if ($velocityCount == 5)
                        #break
                        #end
                        #end
                        <a href="/categories">See all..</a>
                    </div>
                </li>
                <li><a href="/journalists">Journalists</a></li>
                <li class="dropdown" style="float:right">
                    <a class="dropbtn">Manage</a>
                    <div class="dropdown-content">
                        <a href="/articles/manage">Articles</a>
                        <a href="/journalists/manage">Journalists</a>
                    </div>
                </li>
            </ul>
        </section>
    </header>
    <section class="main hbox space-between">
        <!-- begin inner template-->
        <article>#parse( $template )</article>
        <!-- end inner template-->
        <aside>
            <div class="right-menu-body">
                <div class="menu">
                    <div class="search">
                        <form action="/articles" method="get">
                            <input type="text" placeholder="Search.." name="query" id="search-input">
                            <button type="submit" id="search-button">Go</button>
                        </form>
                    </div>
                </div>
            </div>
            #foreach ( $article in $trendingArticles )
            <div class="search"><a href="/articles/$article.getId()">$article.getTitle()</a></div>
            #if( $velocityCount > 5 )
            #break
            #end
            #end
        </aside>
    </section>
</body>
</html>