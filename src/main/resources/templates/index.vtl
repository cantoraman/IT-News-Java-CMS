#foreach ($article in $articles)
    <div class="row">
        <div class="col col-span-1">
            <p><h2><a href="/articles/$article.getId()">$article.getTitle()</a></h2></p>
            <p>#if ($article.getBody().length() > 200)
                $article.getBody().substring(0,200)
                ...
                #else
                $article.getBody()
                #end
            </p>
        </div>
    </div>
#end
